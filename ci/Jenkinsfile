node('master'){
    
    def build_num = currentBuild.number
    def jenkinsNameJob = "Instalador"

    stage('cleaning'){
        deleteDir()
    }
    
    stage('Fetch') {
        timeout(time: 60, unit: 'SECONDS') {
            checkout scm
        }
    }
    
    stage('Hello world'){
        echo "opa, joia?"
    }
    
    stage('iterate over something'){
        dir('ci/'){
            def files = findFiles(glob: '*.yaml')
            
            for(file in files[0].name){
                echo "${file}"
                echo "opa"
                
                stage('zeca'){
                    echo "${file} terere"
                }

            }
        }
    }
}